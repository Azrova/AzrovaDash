<%- include('partials/dashboard_header', { pageTitle: 'Dashboard', title: title }) %>

<div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-semibold text-gray-100">Dashboard</h1>
</div>

<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mb-8"> 
    <div class="stat-card flex items-center space-x-4">
         <div class="icon-container bg-purple-600">
             <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-white">
                <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 3v1.5M4.5 8.25H3m18 0h-1.5M4.5 12H3m18 0h-1.5m-15 3.75H3m18 0h-1.5M8.25 19.5V21M12 3v1.5m0 15V21m3.75-18v1.5m0 15V21m-9-1.5h10.5a2.25 2.25 0 0 0 2.25-2.25V6.75a2.25 2.25 0 0 0-2.25-2.25H6.75A2.25 2.25 0 0 0 4.5 6.75v10.5a2.25 2.25 0 0 0 2.25 2.25Zm.75-12h9v9h-9v-9Z" />
            </svg>
         </div>
         <div>
            <h3 class="text-sm font-medium text-gray-400 mb-0.5">CPU Usage</h3>
            <p class="text-xl font-semibold text-white">
                <%= typeof stats !== 'undefined' && stats.cpuDisplay ? stats.cpuDisplay : 'N/A / N/A' %>
            </p>
         </div>
    </div>

    <div class="stat-card flex items-center space-x-4">
         <div class="icon-container bg-green-600">
             <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-white">
                <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 7.5V6.108c0-1.135.845-2.098 1.976-2.192.373-.03.748-.057 1.123-.08M15.75 18H18a2.25 2.25 0 0 0 2.25-2.25V6.108c0-1.135-.845-2.098-1.976-2.192a48.424 48.424 0 0 0-1.123-.08M15.75 18.75v-1.875a3.375 3.375 0 0 0-3.375-3.375h-1.5a1.125 1.125 0 0 1-1.125-1.125v-1.5A3.375 3.375 0 0 0 6.375 7.5H5.25m11.9-3.664A2.251 2.251 0 0 0 15 2.25h-1.5a2.251 2.251 0 0 0-2.15 1.586m5.8 0c.065.21.1.433.1.664v.75h-6V4.5c0-.231.035-.454.1-.664M6.75 7.5H4.875c-.621 0-1.125.504-1.125 1.125v12c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V16.5a9 9 0 0 0-9-9Z" />
            </svg>
         </div>
         <div>
            <h3 class="text-sm font-medium text-gray-400 mb-0.5">RAM Usage</h3>
            <p class="text-xl font-semibold text-white">
                <%= typeof stats !== 'undefined' && stats.ramDisplay ? stats.ramDisplay : 'N/A / N/A' %>
            </p>
         </div>
    </div>

    <div class="stat-card flex items-center space-x-4">
         <div class="icon-container bg-red-600">
             <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-white">
                <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 6h9.75M10.5 6a1.5 1.5 0 1 1-3 0m3 0a1.5 1.5 0 1 0-3 0M3.75 6H7.5m3 12h9.75m-9.75 0a1.5 1.5 0 0 1-3 0m3 0a1.5 1.5 0 0 0-3 0m-3.75 0H7.5m9-6h3.75m-3.75 0a1.5 1.5 0 0 1-3 0m3 0a1.5 1.5 0 0 0-3 0m-9.75 0h9.75" />
             </svg>
         </div>
         <div>
            <h3 class="text-sm font-medium text-gray-400 mb-0.5">Servers</h3>
            <p class="text-xl font-semibold text-white">
                <%= typeof stats !== 'undefined' && stats.serverLimitDisplay ? stats.serverLimitDisplay : 'N/A / N/A' %>
            </p>
         </div>
    </div>

    <!-- Disk Usage Card -->
    <div class="stat-card flex items-center space-x-4">
        <div class="icon-container bg-blue-600">
             <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-white">
                <path stroke-linecap="round" stroke-linejoin="round" d="M5.25 14.25h13.5m-13.5 0a3 3 0 0 1-3-3V7.5a3 3 0 0 1 3-3h13.5a3 3 0 0 1 3 3v3.75a3 3 0 0 1-3 3m-13.5 0h13.5m-13.5 0a3 3 0 0 0-3 3v.75a3 3 0 0 0 3 3h13.5a3 3 0 0 0 3-3v-.75a3 3 0 0 0-3-3m-13.5 0h13.5" />
            </svg>
        </div>
        <div>
           <h3 class="text-sm font-medium text-gray-400 mb-0.5">Disk Usage</h3>
           <p class="text-xl font-semibold text-white">
               <%= typeof stats !== 'undefined' && stats.diskDisplay ? stats.diskDisplay : 'N/A / N/A' %>
           </p>
        </div>
   </div>

   <!-- Backups Card -->
   <div class="stat-card flex items-center space-x-4">
        <div class="icon-container bg-yellow-600">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-white">
                <path stroke-linecap="round" stroke-linejoin="round" d="m20.25 7.5-.625 10.375a2.25 2.25 0 0 1-2.247 2.125H6.622a2.25 2.25 0 0 1-2.247-2.125L3.75 7.5M10 11.25h4M3.375 7.5h17.25c.621 0 1.125-.504 1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125H3.375c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125Z" />
            </svg>
        </div>
        <div>
           <h3 class="text-sm font-medium text-gray-400 mb-0.5">Backups</h3>
           <p class="text-xl font-semibold text-white">
               <%= typeof stats !== 'undefined' && stats.backupsDisplay ? stats.backupsDisplay : 'N/A / N/A' %>
           </p>
        </div>
   </div>

   <!-- Databases Card -->
   <div class="stat-card flex items-center space-x-4">
        <div class="icon-container bg-teal-600">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-white">
                <path stroke-linecap="round" stroke-linejoin="round" d="M20.25 6.375c0 2.278-3.694 4.125-8.25 4.125S3.75 8.653 3.75 6.375m16.5 0c0-2.278-3.694-4.125-8.25-4.125S3.75 4.097 3.75 6.375m16.5 0v11.25c0 2.278-3.694 4.125-8.25 4.125s-8.25-1.847-8.25-4.125V6.375m16.5 0v3.75m-16.5-3.75v3.75m16.5 0v3.75C20.25 16.153 16.556 18 12 18s-8.25-1.847-8.25-4.125v-3.75m16.5 0c0 2.278-3.694 4.125-8.25 4.125s-8.25-1.847-8.25-4.125" />
            </svg>
        </div>
        <div>
           <h3 class="text-sm font-medium text-gray-400 mb-0.5">Databases</h3>
           <p class="text-xl font-semibold text-white">
               <%= typeof stats !== 'undefined' && stats.databasesDisplay ? stats.databasesDisplay : 'N/A / N/A' %>
           </p>
        </div>
   </div>
</div>

<%- include('partials/footer') %>
